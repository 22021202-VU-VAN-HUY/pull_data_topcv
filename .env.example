# ============================
# Postgres
# ============================
POSTGRES_USER=topcv_user
POSTGRES_PASSWORD=topcv_password
POSTGRES_DB=topcv_db

# Khi chạy trong docker-compose, app sẽ kết nối tới service "db" ở port 5432
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Nếu chạy crawler local và Postgres chạy trên host mapping port 5440,
# thì chỉnh lại POSTGRES_HOST=localhost, POSTGRES_PORT=5440 trong file .env thực tế.


# ============================
# Crawler config
# ============================
# thời gian nghỉ giữa các job (giây)
CRAWL_SLEEP_SECONDS=3

# số lần retry mỗi job
CRAWL_MAX_RETRY=3

# số trang listing sẽ crawl từ https://www.topcv.vn/viec-lam?page=1..N
CRAWL_MAX_PAGES=1

# dùng playwright cho listing nếu bị chặn? (true/false)
CRAWL_USE_PLAYWRIGHT=false

TOPCV_LISTING_URL=https://www.topcv.vn/viec-lam
TOPCV_BASE_URL=https://www.topcv.vn
